<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="albaran_ute_repair_form" model="ir.ui.view">
        <field name="name">albaran.ute.repair.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath expr='//form/sheet/notebook' position="inside">
                <page string="Albaran UTE" name="UTE">
                    <group>
                        <group>
                            <field name="ute_ot"/>
                            <field name="ute_cargo"/>
                            <field name="horas"/>
                        </group>
                        <group>
                            <field name="ute_fecha_notificacion"/>
                            <field name="ute_fecha_albaran"/>
                            <field name="ute_secuencia" attrs="{'invisible':[('ute_secuencia','=',False)]}"/>
                            <button type="object" name="get_ute_sequence" string="Asignar cÃ³digo" class="btn-primary" attrs="{'invisible':[('ute_secuencia','!=',False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="ute_descripcion"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="albaran_ute_repair_tree" model="ir.ui.view">
        <field name="name">albaran.ute.repair.tree</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_tree" />
        <field name="arch" type="xml">
            <xpath expr='//field[@name="location_id"]' position="after">
                <field name="ute_fecha_notificacion" optional="hide"/>
                <field name="horas" optional="hide"/>
                <field name="tag_ids" widget='many2many_tags' options="{'color_field':'color'}" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_report_job" model="ir.ui.view">
        <field name="name">purchase.order.report.job</field>
        <field name="inherit_id" ref="purchase.report_purchaseorder_document" />
        <field name="arch" type="xml">
            <xpath expr="//t/t/div/div[@id=&quot;informations&quot;]" position="inside">
                <div t-if="o.report_job" class="col-3 bm-2">
                    <strong>Obra</strong>
                    <p t-field="o.report_job" class="m-0"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_intetralia_report_job" model="ir.ui.view">
        <field name="name">purchase.order.intetralia_report_job</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
        <field name="arch" type="xml">
            <?xml version="1.0"?>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="report_job" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
