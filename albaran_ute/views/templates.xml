<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>

        <template id="external_ute_layout">
            <t t-name="albaran_ute.external_document_layout">
                <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <t t-call="web.address_layout"/>
                    <t t-raw="0"/>
                </div>

                <div class="footer o_standard_footer">
                    <div class="text-left" style="border-top: 1px solid black;">
                        <!--<div t-if="report_type == 'pdf'" class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>-->
                    </div>
                </div>
            </t>
        </template>

        <template id="report_albaran_ute_document">
            <t t-call="albaran_ute.external_ute_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">


                </div>
            </t>
        </template>

        <template id="albaran_ute_report_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="albaran_ute.report_albaran_ute_document" t-lang="lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>